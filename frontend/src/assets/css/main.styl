@import url('https://fonts.googleapis.com/css?family=Varela+Round&display=swap')

#app
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #eee
  height 100%

  > .row
    height 100%

    > .col
      height 100%

      &:not(:first-child)
        border-left 1px solid #919191

  .row
    display flex

    .col
      width 100%

      &.auto
        width auto

    .col.main-frame
      padding 57px

      > .content
        padding-top 57px

    .col.has-logo
      width auto
      flex-shrink 0
      display flex
      align-items center

html
  height 100%
  overflow hidden
  background-color #191919
  background-size 20px 20px
  font-size 12px
  font-family 'Varela Round', sans-serif

body
  margin 0
  height 100%

.logo
  size 300px
  flex-shrink 0
  display block

.license-row
  padding 27px _
  > .col:first-child
    text-align right
    padding-right 7px
    border-right 1px solid #919191
    margin-right 7px

  label
    cursor pointer

  input
    display none


.full-license
  height 200px
  overflow-y auto

.pre
  white-space pre

.center
  justify-content center

.space-around
  justify-content space-around

.text-center
  text-align center

.text-green
.checked
  color #53af59

.text-blue
  color #0af

.text-red
  color #f44

a
  color #53af59
  text-decoration none
  cursor pointer

.btn
  border 0
  color #53af59
  background #fff
  padding 13px 37px
  display inline
  cursor pointer

  &[disabled]
    opacity .5
    pointer-events none

*
  box-sizing border-box

p
h1, h2, h3
h4, h5, h6
  margin 0
  padding _ _ 1ch

ul
  padding 0
  list-style none

  li:not(:last-child)
    padding _ _ 7px

[class^='icon-']
[class*=' icon-']
  display inline
  vertical-align top

li
  [class^='icon-']
  [class*=' icon-']
    padding-right 1ch
