extends ../layout.pug

block content
    main.hero.flex.justify-center.pt-16
        form.container.w-full
            div
                p.bg-white.px-6.py-2.inline-block.text-2xl.font-bold  Customize
            div.bg-white.px-6.my-4.mb-6
                div
                    p.pt-3.font-bold Installation type
                    div
                        p.underline Local
                        label
                            input.ml-2(type="radio" name="installation-type" value="local" required checked="checked")
                            span.p-1 Install only for me
                    div.text-gray-500
                        p.underline Global (not supported for alpha releases)
                        label.line-through
                            input.ml-2(type="radio" name="installation-type" value="global" required disabled="disabled")
                            span.p-1 Install for everyone
                    p.pt-3.pb-2.font-bold Installation path
                    div.flex
                        input#path.border.mb-4.w-full.p-1(type="text")
                        button#choose-path.p-1.mb-4.px-4.ml-1.text-white Change
            button#install.next.text-2xl.text-white.px-6.py-2.outline-none(type="submit") Install â†’
    script.
        const customize = require('./customize.js')
        customize.render()
    style.
        #choose-path {
            background-color: #1c71bb
        }
                    
